server {

    listen 80;
    server_name shareideas.com;
    charset utf-8;

    location /static {
        autoindex on;
        alias /code/staticsfiles;
    }

    location / {
        proxy_pass http://web:8000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }

}